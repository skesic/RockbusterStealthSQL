--How many of the top 5 customers are based within each country

SELECT E.country,
	 COUNT(DISTINCT B.customer_id) AS all_customer_count,
	 COUNT(DISTINCT top_5_customers) AS top_customer_count
FROM customer B
INNER JOIN address C ON B.address_id = C.address_id
INNER JOIN city D ON C.city_id = D.city_id
INNER JOIN country E ON D.country_id = E.country_id
LEFT JOIN (SELECT A.customer_id,
	        B.first_name AS customer_first_name,
	        B.last_name AS customer_last_name,
	        E.country,
	        D.city,
	        SUM(A.amount) AS total_amount_paid
		   FROM payment A
		   INNER JOIN customer B ON A.customer_id = B.customer_id
		   INNER JOIN address C ON B.address_id = C.address_id
		   INNER JOIN city D ON C.city_id = D.city_id
		   INNER JOIN country E ON D.country_id = E.country_id
		   WHERE city IN ('Aurora',
		      'Acua',
		      'Citrus Heights',
		      'Iwaki',
		      'Ambattur',
		      'Shanwei',
		      'So Leopoldo',
		      'Teboksary',
		      'Tianjin',
		      'Cianjur')
		   GROUP BY A.customer_id, first_name, last_name, country, city
		   ORDER BY total_amount_paid DESC
		   LIMIT 5) AS top_5_customers ON B.customer_id = top_5_customers.customer_id
GROUP BY E.country
HAVING COUNT(top_5_customers) > 0
ORDER BY all_customer_count DESC;
